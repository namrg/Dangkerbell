<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="290dp"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    android:background="#ffffff"
    android:orientation="vertical">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:background="@color/colorAccent">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:src="@drawable/clearlogo"></ImageView>
        <TextView
            android:id="@+id/toolbar_menu"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginTop="10dp"
            android:textSize="15dp"
            android:fontFamily="@font/nanumsquare_acr"
            android:text="환영합니당"
            android:textColor="#ffffff"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/toolbar_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:drawableRight="@drawable/backspacewhite"
            android:fontFamily="@font/nanumsquare_acr"
            android:textColor="#6B6B6B" />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/userid"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textSize="15dp"

            android:layout_marginBottom="10dp"
            android:fontFamily="@font/nanumsquare_acr"
            android:text="userid"
            android:textColor="#ffffff"
             />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="님"
            android:textSize="15dp"

            android:textColor="#ffffff"
            ></TextView>
    </LinearLayout>

    <Button
        android:id="@+id/mypage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_person_blue_24dp"
        android:textSize="15dp"
        android:fontFamily="@font/nanumsquare_acr"

        android:text="회원정보 관리"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal" />


    <Button
        android:id="@+id/drawer_pill"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/pharmacy_black"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="복약 관리"
        android:textSize="15dp"
        />


    <Button
        android:id="@+id/drawer_blood"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/management_black"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="혈당/혈압 관리"
        android:textSize="15dp"
        />

    <Button
        android:id="@+id/drawer_meal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/meal_black"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="식단 관리"
        android:textSize="15dp"
        />


    <Button
        android:id="@+id/settime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"

        android:background="#ffffff"
        android:drawableLeft="@drawable/notification"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="시간 설정"
        android:textSize="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_feedback_blue"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="문의하기"
        android:textSize="15dp"
        />


    <Button
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/settings_blue"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="환경설정"
        android:textSize="15dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal">


        ></LinearLayout>

    <Button
        android:id="@+id/logout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:background="#ffffff"
        android:drawableLeft="@drawable/ic_logout_blue"
        android:fontFamily="@font/nanumsquare_acr"
        android:text="로그아웃"
        android:textSize="15dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/colorAccent"
        android:orientation="horizontal" />


</LinearLayout>