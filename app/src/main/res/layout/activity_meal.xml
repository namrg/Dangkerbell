<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            tools:context=".mealManagement.mealActivity">


            <View
                android:id="@+id/view_toolbar"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/toolbar"

                android:background="@color/colorAccent" />


            <androidx.appcompat.widget.Toolbar

                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >


                <TextView
                    android:id="@+id/toolbar_menu"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableTop="@drawable/ic_menu_black_24dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="메뉴"
                    android:textColor="#7A7A7A"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/home_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmdohyeon_ttf"
                    android:text="당커벨"
                    android:layout_gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:textStyle="bold" />




            </androidx.appcompat.widget.Toolbar>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="55dp"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">


                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:columnCount="3"
                        android:gravity="center"
                        android:rowCount="1"
                        tools:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquare_acr"
                            android:text="식단 관리"

                            android:textColor="@color/colorAccent"
                            android:textSize="20dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/blood_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:fontFamily="@font/nanumsquare_acr"
                            android:text="혈당 관리"
                            android:textSize="20dp" />

                        <TextView
                            android:id="@+id/pill_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"

                            android:fontFamily="@font/nanumsquare_acr"
                            android:text="복약 관리"

                            android:textSize="20dp" />


                    </GridLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal">
                    ></LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/prev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:drawableLeft="@drawable/prev"></TextView>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:text="날짜"
                        android:textColor="#8C8C8C"
                        android:textSize="17dp"></TextView>

                    <TextView
                        android:id="@+id/next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/next"></TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorPrimary"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:text="아침"
                        android:textSize="19dp"></TextView>

                    <TextView
                        android:id="@+id/morningmealmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="270dp"
                        android:drawableRight="@drawable/expandmoreblack">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/morningmeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/morningtext1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                       >

                        <EditText
                            android:id="@+id/morningfood1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="아침을 입력해주세요" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/morningsearch1"
                            android:background="@color/colorPrimary"
                            android:text="음식 검색"></Button>

                        <ImageView
                            android:id="@+id/addmorningtext1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/addyellow"></ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/morningtext2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/morningfood2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="아침을 입력해주세요" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/morningsearch2"
                            android:background="@color/colorPrimary"
                            android:text="음식 검색"></Button>

                        <ImageView
                            android:id="@+id/addmorningtext2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="40dp"
                            android:src="@drawable/addyellow"></ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/morningtext3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/morningfood3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="아침을 입력해주세요" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:id="@+id/morningsearch3"
                            android:background="@color/colorPrimary"
                            android:text="음식 검색"></Button>

                        <ImageView
                            android:id="@+id/addmorningtext3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="40dp"
                            android:src="@drawable/addyellow"></ImageView>
                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/morningfinish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginLeft="290dp"
                        android:visibility="gone"
                        android:drawableRight="@drawable/checkyellow"
                        android:gravity="end"></TextView>

                    <TextView
                        android:id="@+id/morningmealless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/expandlessyellow"
                        android:gravity="end"></TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:text="점심"
                        android:textColor="#ffffff"
                        android:textSize="19dp"></TextView>

                    <TextView
                        android:id="@+id/lunchmealmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="270dp"
                        android:drawableRight="@drawable/expandmore"></TextView>
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lunchmeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/lunchtext1"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/lunchfood1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="점심을 입력해주세요" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@color/colorAccent"
                            android:id="@+id/lunch"
                            android:text="음식 검색"
                            android:textColor="#ffffff" />

                        <ImageView
                            android:id="@+id/addlunchtext1"
                            android:layout_width="wrap_content"
                            android:layout_height="25dp"
                            android:layout_marginLeft="40dp"
                            android:src="@drawable/addblue"></ImageView>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lunchtext2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/lunchfood2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="점심을 입력해주세요" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@color/colorAccent"
                            android:text="음식 검색"

                            android:textColor="#ffffff" />

                        <ImageView
                            android:id="@+id/addlunchtext2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="40dp"
                            android:src="@drawable/addblue"></ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/lunchtext3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/lunchfood3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="점심을 입력해주세요" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@color/colorAccent"
                            android:text="음식 검색"
                            android:textColor="#ffffff" />

                        <ImageView
                            android:id="@+id/addlunchtext3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="40dp"
                            android:src="@drawable/addblue"></ImageView>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/lunchfinish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginLeft="290dp"
                        android:drawableRight="@drawable/check"
                        android:gravity="end"
                        android:visibility="gone"></TextView>

                    <TextView
                        android:id="@+id/lunchmealless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/expandlessblue"
                        android:gravity="end"
                        android:visibility="gone"></TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:text="저녁"
                        android:textSize="19dp"></TextView>

                    <TextView
                        android:id="@+id/dinnermealmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="270dp"
                        android:drawableRight="@drawable/expandmoreblack">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/dinnermeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <LinearLayout
                        android:id="@+id/dinnertext1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/dinnerfood1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="저녁을 입력해주세요" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@color/colorPrimary"
                            android:text="음식 검색"></Button>

                        <ImageView
                            android:id="@+id/adddinnertext1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="40dp"
                            android:src="@drawable/addyellow"></ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dinnertext2"
                        android:layout_marginTop="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/dinnerfood2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="저녁을 입력해주세요" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@color/colorPrimary"
                            android:text="음식 검색"></Button>

                        <ImageView
                            android:id="@+id/adddinnertext2"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="40dp"
                            android:src="@drawable/addyellow"></ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dinnertext3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:visibility="gone">

                        <EditText
                            android:id="@+id/dinnefood3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="저녁을 입력해주세요" />

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@color/colorPrimary"
                            android:text="음식 검색"></Button>

                        <ImageView
                            android:id="@+id/adddinnertext3"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="40dp"
                            android:src="@drawable/addyellow"></ImageView>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/dinnerfinish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginLeft="290dp"
                        android:drawableRight="@drawable/checkyellow"
                        android:visibility="gone"
                        android:gravity="end"></TextView>

                    <TextView
                        android:id="@+id/dinnermealless"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:visibility="gone"
                        android:layout_marginLeft="10dp"
                        android:drawableRight="@drawable/expandlessyellow"
                        android:gravity="end"></TextView>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:background="@color/colorAccent"
                    android:gravity="center">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:text="섭취칼로리"
                        android:textColor="#ffffff"

                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="0"

                        android:textColor="#ffffff"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Kcal"
                        android:textColor="#ffffff"

                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/colorPrimary">

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:text="권장칼로리"
                        android:textColor="#ffffff"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="0"
                        android:textColor="#ffffff"

                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Kcal"
                        android:textColor="#ffffff"

                        android:textSize="15dp" />


                </LinearLayout>


                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">


                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>


        </RelativeLayout>



    </LinearLayout>
    <include layout="@layout/activity_drawer"/>


</androidx.drawerlayout.widget.DrawerLayout>

