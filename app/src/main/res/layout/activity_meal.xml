<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            tools:context=".mealManagement.mealActivity">


            <View
                android:id="@+id/view_toolbar"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/toolbar"

                android:background="@color/colorAccent" />


            <androidx.appcompat.widget.Toolbar

                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >


                <TextView
                    android:id="@+id/toolbar_menu"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableTop="@drawable/ic_menu_black_24dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="메뉴"
                    android:textColor="#7A7A7A"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/home_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmdohyeon_ttf"
                    android:text="당커벨"
                    android:layout_gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:textStyle="bold" />




            </androidx.appcompat.widget.Toolbar>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="55dp"
                android:orientation="vertical">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">


                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:columnCount="3"
                        android:gravity="center"
                        android:rowCount="1"
                        tools:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquare_acr"
                            android:text="식단 관리"

                            android:textStyle="bold"
                            android:textColor="@color/colorAccent"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/blood_txt"
                            android:fontFamily="@font/nanumsquare_acr"
                            android:text="혈당 관리"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:id="@+id/pill_txt"

                            android:fontFamily="@font/nanumsquare_acr"
                            android:text="복약 관리"

                            android:textSize="20dp" />


                    </GridLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal">
                    ></LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/prev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:drawableLeft="@drawable/prev"></TextView>
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:text="날짜"
                        android:layout_marginRight="10dp"
                        android:textColor="#8C8C8C"
                        android:textSize="17dp"></TextView>
                    <TextView
                        android:id="@+id/next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/next"></TextView>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:text="아침"
                        android:layout_marginLeft="20dp"
                        android:textSize="19dp"
                        ></TextView>


                    <TextView
                        android:id="@+id/morningmealmore"
                        android:layout_width="wrap_content"
                        android:layout_height="19dp"
                        android:layout_marginLeft="320dp"
                        android:drawableRight="@drawable/expandmoreblack">

                    </TextView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:id="@+id/morningmeal"
                    android:visibility="gone"

                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:id="@+id/morningtext1"
                       >
                        <EditText
                            android:layout_width="wrap_content"
                            android:hint="아침을 입력해주세요"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="음식 검색"
                            android:background="@color/colorPrimary"
                            ></Button>

                        <ImageView
                            android:id="@+id/addmorningtext1"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:layout_marginLeft="40dp"
                            android:layout_marginTop="15dp"
                            android:src="@drawable/more"></ImageView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/morningtext2"
                        android:visibility="gone">
                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:hint="아침을 입력해주세요"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="음식 검색"
                            android:background="@color/colorPrimary"
                            ></Button>
                        <ImageView
                            android:id="@+id/addmorningtext2"
                            android:layout_width="25dp"
                            android:layout_marginLeft="40dp"
                            android:layout_height="25dp"
                            android:src="@drawable/more"></ImageView>

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/morningtext3"
                        android:visibility="gone">
                        <EditText
                            android:layout_marginLeft="10dp"
                            android:layout_width="wrap_content"
                            android:hint="아침을 입력해주세요"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="음식 검색"
                            android:background="@color/colorPrimary"
                            ></Button>
                        <ImageView
                            android:id="@+id/addmorningtext3"
                            android:layout_width="25dp"
                            android:layout_marginLeft="40dp"
                            android:layout_height="25dp"
                            android:src="@drawable/more"></ImageView>

                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:id="@+id/morningmealless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:drawableRight="@drawable/expandless"
                    android:gravity="end">
                </TextView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@color/colorAccent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:text="점심"
                        android:textColor="#ffffff"
                        android:textSize="19dp"></TextView>

                    <TextView
                        android:id="@+id/lunchmealmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="320dp"
                        android:drawableRight="@drawable/expandmore"></TextView>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:id="@+id/lunchmeal"
                    android:visibility="gone"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/lunchtext1">
                        <EditText
                            android:layout_width="wrap_content"
                            android:hint="점심을 입력해주세요"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"/>

                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:background="@color/colorAccent"
                            android:text="음식 검색"
                            android:textColor="#ffffff" />
                        <ImageView
                            android:id="@+id/addlunchtext1"

                            android:layout_width="25dp"
                            android:layout_marginLeft="40dp"
                            android:layout_height="25dp"
                            android:src="@drawable/more"></ImageView>

                    </LinearLayout>
                    <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:id="@+id/lunchtext2"
                    android:visibility="gone">
                    <EditText
                        android:layout_width="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:hint="점심을 입력해주세요"
                        android:layout_height="wrap_content"/>
                    <Button
                        android:layout_width="wrap_content"
                        android:text="음식 검색"
                        android:layout_height="30dp"
                        android:textColor="#ffffff"

                        android:background="@color/colorAccent"
                        />
                    <ImageView
                        android:layout_width="25dp"
                        android:layout_marginLeft="40dp"
                        android:layout_height="25dp"
                        android:id="@+id/addlunchtext2"
                        android:src="@drawable/more"></ImageView>
                     </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/lunchtext3"
                        android:visibility="gone">
                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:hint="점심을 입력해주세요"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:text="음식 검색"
                            android:layout_height="30dp"
                            android:textColor="#ffffff"
                            android:background="@color/colorAccent"
                            />
                        <ImageView
                            android:id="@+id/addlunchtext3"
                            android:layout_width="25dp"
                            android:layout_marginLeft="40dp"
                            android:layout_height="25dp"
                            android:src="@drawable/more"></ImageView>
                    </LinearLayout>
                </LinearLayout>

                <TextView
                    android:id="@+id/lunchmealless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:visibility="gone"
                    android:layout_marginRight="15dp"
                    android:drawableRight="@drawable/expandless"
                    android:gravity="end">

                </TextView>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:background="@color/colorPrimary"
                    android:layout_marginTop="10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:text="저녁"
                        android:layout_marginLeft="20dp"
                        android:textSize="19dp"></TextView>

                    <TextView
                        android:id="@+id/dinnermealmore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="320dp"
                        android:drawableRight="@drawable/expandmoreblack">

                    </TextView>

                </LinearLayout>

                <LinearLayout
                    android:layout_gravity="center"
                    android:id="@+id/dinnermeal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    >
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:id="@+id/dinnertext1">
                        <EditText
                            android:layout_width="wrap_content"
                            android:hint="저녁을 입력해주세요"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="음식 검색"
                            android:background="@color/colorPrimary"
                            ></Button>

                        <ImageView
                            android:layout_width="25dp"
                            android:layout_marginLeft="40dp"
                            android:layout_height="25dp"
                            android:id="@+id/adddinnertext1"
                            android:src="@drawable/more"></ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/dinnertext2">
                        <EditText
                            android:layout_width="wrap_content"
                            android:hint="저녁을 입력해주세요"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="음식 검색"
                            android:background="@color/colorPrimary"
                            ></Button>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_marginLeft="40dp"
                            android:layout_height="25dp"
                            android:src="@drawable/more"
                            android:id="@+id/adddinnertext2"></ImageView>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:visibility="gone"
                        android:id="@+id/dinnertext3">
                        <EditText
                            android:layout_width="wrap_content"
                            android:hint="저녁을 입력해주세요"
                            android:layout_marginLeft="10dp"
                            android:layout_height="wrap_content"/>
                        <Button
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:text="음식 검색"
                            android:background="@color/colorPrimary"
                            ></Button>
                        <ImageView
                            android:layout_width="25dp"
                            android:layout_marginLeft="40dp"
                            android:layout_height="25dp"
                            android:src="@drawable/more"
                            android:id="@+id/adddinnertext3"></ImageView>
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/dinnermealless"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:layout_marginRight="15dp"
                    android:visibility="gone"
                    android:drawableRight="@drawable/expandless"
                    android:gravity="end"></TextView>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:gravity="center"
                    android:background="@color/colorAccent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:text="섭취칼로리"
                        android:textColor="#ffffff"

                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:textColor="#ffffff"

                        android:text="0"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Kcal"
                        android:textColor="#ffffff"

                        android:textSize="15dp" />

                    <LinearLayout
                        android:layout_width="2dp"
                        android:layout_height="30dp"
                        android:layout_marginLeft="10dp"
                        android:background="@color/colorPrimary">

                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:layout_marginLeft="10dp"
                        android:textColor="#ffffff"

                        android:fontFamily="@font/bmdohyeon_ttf"
                        android:text="권장칼로리"
                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:text="0"
                        android:textColor="#ffffff"

                        android:textSize="15dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:text="Kcal"
                        android:textColor="#ffffff"

                        android:textSize="15dp" />



                </LinearLayout>


                <View
                    android:id="@+id/view2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="50dp"
                    android:gravity="center"
                    android:orientation="horizontal">





                </LinearLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <ListView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />


            </LinearLayout>


        </RelativeLayout>



    </LinearLayout>
    <include layout="@layout/activity_drawer"/>


</androidx.drawerlayout.widget.DrawerLayout>

