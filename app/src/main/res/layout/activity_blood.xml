<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            tools:context=".bloodManagement.bloodActivity">


            <View
                android:id="@+id/view_toolbar"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_below="@+id/toolbar"

                android:background="@color/colorAccent" />


            <androidx.appcompat.widget.Toolbar

                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                >

                <TextView
                    android:id="@+id/toolbar_menu"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left"
                    android:drawableTop="@drawable/ic_menu_black_24dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="메뉴"
                    android:textColor="#7A7A7A"
                    android:textSize="15dp" />

                <TextView
                    android:id="@+id/home_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/bmdohyeon_ttf"
                    android:text="당커벨"
                    android:layout_gravity="center"
                    android:textColor="@color/colorAccent"
                    android:textSize="20dp"
                    android:textStyle="bold" />




            </androidx.appcompat.widget.Toolbar>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="55dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">


                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:columnCount="3"
                        android:rowCount="1"
                        android:gravity="center"
                        tools:layout_gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/nanumsquare_acr"
                            android:text="식단 관리"
                            android:id="@+id/meal_txt"
                            android:textSize="20dp" />

                        <TextView
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:textColor="@color/colorAccent"
                            android:fontFamily="@font/nanumsquare_acr"
                            android:text="혈당 관리"
                            android:textSize="20dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="50dp"
                            android:fontFamily="@font/nanumsquare_acr"
                            android:text="복약 관리"
                            android:id="@+id/pill_txt"

                            android:textSize="20dp" />


                    </GridLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/colorAccent"
                    android:orientation="horizontal">

                    ></LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:gravity="center"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/prev"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:drawableLeft="@drawable/prev"></TextView>
                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                       android:fontFamily="@font/nanumsquare_acr"
                        android:text="날짜"
                        android:layout_marginRight="10dp"
                        android:textColor="#8C8C8C"
                        android:textSize="17dp"></TextView>
                    <TextView
                        android:id="@+id/next"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/next"></TextView>

                </LinearLayout>





                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:gravity="center">

                    <TableLayout
                        android:layout_width="350dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/selectbutton">

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_gravity="center"

                            android:background="@color/colorAccent">

                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"

                                android:background="@color/colorAccent"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text=""
                                android:textColor="#ffffff"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_gravity="center"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text="혈당"
                                android:textColor="#ffffff"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="@color/colorAccent"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text="혈압"
                                android:layout_gravity="center"
                                android:textColor="#ffffff"
                                android:textSize="15dp" />
                            <TextView
                                android:layout_width="30dp"
                                android:layout_height="wrap_content"

                                android:background="@color/colorAccent"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text=""
                                android:textColor="#ffffff"
                                android:textSize="15dp" />



                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/wakeUp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text="기상 후"
                                android:textSize="15dp"
                                android:visibility="visible" />


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/wakesugartext"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:visibility="visible"
                                android:textSize="15dp" />


                            <TextView
                                android:id="@+id/wakepressureetext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:gravity="center"
                                android:visibility="visible"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/wakeupbloodedit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@drawable/pencil"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp"
                                android:visibility="visible" />


                        </TableRow>
                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text="기상 후"
                                android:id="@+id/wakeup"
                                android:visibility="gone"
                                android:textSize="15dp" />


                            <EditText
                                android:id="@+id/wakesugaredit"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:visibility="gone"
                                android:textSize="15dp" />


                            <EditText
                                android:id="@+id/wakepressureedit"
                                android:gravity="center"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:visibility="gone"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />

                            <TextView

                                android:id="@+id/wakeupbloodfinish"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:drawableLeft="@drawable/check"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />


                        </TableRow>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorAccent"
                            android:orientation="horizontal">


                            ></LinearLayout>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text="아침"
                                android:id="@+id/Morning"
                                android:visibility="visible"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/morningsugartext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:visibility="visible"
                                android:gravity="center"

                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />

                            <TextView
                                android:id="@+id/morningpressuretext"
                                android:visibility="visible"
                                android:gravity="center"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="10dp"

                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />
                            <TextView
                                android:id="@+id/morningbloodedit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp"
                                android:visibility="visible"

                                android:drawableLeft="@drawable/pencil" />
                        </TableRow>
                        <TableRow>

                            <TextView
                                android:id="@+id/morning"

                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text="아침"
                                android:textSize="15dp" />


                            <EditText
                                android:visibility="gone"
                                android:id="@+id/morningsugaredit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:gravity="center"

                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/morningpressureedit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:gravity="center"

                                android:layout_marginLeft="10dp"
                                android:visibility="gone"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />
                            <TextView
                                android:visibility="gone"
                                android:id="@+id/morningbloodfinish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp"
                                android:drawableLeft="@drawable/check" />
                        </TableRow>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorAccent"
                            android:orientation="horizontal">


                            ></LinearLayout>

                        <TableRow>

                            <TextView
                                android:id="@+id/Lunch"
                                android:visibility="visible"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text="점심"
                                android:textSize="15dp" />

                            <TextView
                                android:gravity="center"

                                android:id="@+id/lunchsugartext"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp"
                                android:visibility="visible"
                                />

                            <TextView
                                android:gravity="center"

                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/lunchpressuretext"
                                android:visibility="visible"

                                android:layout_marginLeft="10dp"

                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />
                            <TextView
                                android:id="@+id/lunchbloodedit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:visibility="visible"

                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp"
                                android:drawableLeft="@drawable/pencil" />
                        </TableRow>
                        <TableRow>

                            <TextView
                                android:id="@+id/lunch"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text="점심"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/lunchsugaredit"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp"
                                android:visibility="gone"
                                android:gravity="center"

                                />

                            <EditText
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/lunchpressureedit"
                                android:visibility="gone"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />
                            <TextView
                                android:id="@+id/lunchbloodfinish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:visibility="gone"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp"
                                android:drawableLeft="@drawable/check" />
                        </TableRow>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorAccent"
                            android:orientation="horizontal">


                            ></LinearLayout>

                        <TableRow>

                            <TextView
                                android:id="@+id/Dinner"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text="저녁"
                                android:textSize="15dp" />

                            <TextView
                                android:gravity="center"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/dinnersugartext"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />

                            <TextView
                                android:gravity="center"
                                android:id="@+id/dinnerpressuretext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="10dp"

                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />
                            <TextView
                                android:gravity="center"

                                android:id="@+id/dinnerbloodedit"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp"
                                android:drawableLeft="@drawable/pencil" />
                        </TableRow>
                        <TableRow>

                            <TextView
                                android:id="@+id/dinner"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text="저녁"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/dinnersugaredit"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp"
                                android:visibility="gone"
                                android:gravity="center"
                                />

                            <EditText
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/dinnerpressureedit"
                                android:visibility="gone"
                                android:gravity="center"

                                android:layout_marginLeft="10dp"

                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />
                            <TextView
                                android:id="@+id/dinnerbloodfinish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:visibility="gone"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp"
                                android:drawableLeft="@drawable/check" />
                        </TableRow>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/colorAccent"
                            android:orientation="horizontal">


                            ></LinearLayout>

                        <TableRow>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text="취침 전"
                                android:id="@+id/Sleep"
                                android:textSize="15dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/sleepsugartext"
                                android:gravity="center"

                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />

                            <TextView
                                android:gravity="center"
                                android:id="@+id/sleeppressuretext"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                android:layout_marginLeft="10dp"

                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />
                            <TextView
                                android:gravity="center"

                                android:id="@+id/sleepbloodedit"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp"
                                android:drawableLeft="@drawable/pencil" />
                        </TableRow>
                        <TableRow>

                            <TextView
                                android:id="@+id/sleep"
                                android:visibility="gone"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/bmdohyeon_ttf"
                                android:text="취침 전"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/sleepsugaredit"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp"
                                android:visibility="gone"
                                android:gravity="center"
                                />

                            <EditText
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/sleeppressureedit"
                                android:visibility="gone"
                                android:gravity="center"
                                android:layout_marginLeft="10dp"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp" />
                            <TextView
                                android:id="@+id/sleepbloodfinish"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:visibility="gone"
                                android:fontFamily="@font/nanumsquare_acr"
                                android:textSize="15dp"
                                android:drawableLeft="@drawable/check" />
                        </TableRow>
                    </TableLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/round_cornerblue"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/meal"
                        android:layout_width="230dp"
                        android:layout_height="30dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/round_corneryellow"
                        android:fontFamily="@font/nanumsquare_acr"
                        android:gravity="center"
                        android:text="정기적으로 입력해주세요."
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:visibility="visible" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginTop="20dp"
                        android:columnCount="4"
                        android:rowCount="1">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:fontFamily="@font/bmdohyeon_ttf"
                            android:text="당화혈 색소"

                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/bmdohyeon_ttf"

                            android:hint="정보 없음 "

                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/bmdohyeon_ttf"

                            android:text="콜레스테롤"
                            android:textColor="#ffffff"
                            android:textSize="15dp" />

                        <EditText
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/bmdohyeon_ttf"

                            android:hint="정보없음"

                            android:textColor="#ffffff"
                            android:textSize="15dp" />


                    </GridLayout>

                    <View
                        android:id="@+id/view2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </LinearLayout>


            </LinearLayout>


        </RelativeLayout>



    </LinearLayout>
    <include layout="@layout/activity_drawer"/>

</androidx.drawerlayout.widget.DrawerLayout>