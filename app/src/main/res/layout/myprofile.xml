<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ProfileActivity"
    >
    <View
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/toolbar"

        android:background="@color/colorAccent" />
    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/back"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:drawableTop="@drawable/backspace"
            android:fontFamily="@font/nanumsquare_acr"
            android:text="뒤로가기"
            android:textColor="#7A7A7A"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/nanumsquare_acr"
            android:text="내 정보 관리"
            android:layout_gravity="center"

            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/toolbar_cart"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:drawableTop="@drawable/ic_input_black_24dp"
            android:fontFamily="@font/nanumsquare_acr"
            android:text="로그아웃"
            android:textColor="#7A7A7A"
            android:textSize="15dp" />


    </androidx.appcompat.widget.Toolbar>
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="60dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="성별"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/mgender"
                    android:layout_width="100dp"
                    android:gravity="center"
                    android:layout_height="30dp"
                    android:layout_marginRight="100dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text=""
                    android:textSize="15dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="생년월일"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/mbrith"
                    android:layout_width="100dp"
                    android:layout_marginRight="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="center"
                    android:textSize="15dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="당뇨유형"
                    android:textSize="15dp"></TextView>


                <TextView
                    android:id="@+id/mdiabeteskind"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:gravity="center"

                    android:layout_marginRight="100dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    ></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="키"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/mheight"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="center"
                    android:textColorHint="#b8b8b8"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="70dp"
                    android:text="CM" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:id="@+id/weight"
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="몸무게"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/mweight"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="center"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="30dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="70dp"
                    android:text="KG" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="31dp"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="BMI"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/mbmi"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="100dp"
                    android:gravity="center" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="기저질환"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/mdisease"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="center"
                    android:textSize="15dp" />
                <TextView
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:fontFamily="@font/nanumsquare_acr"

                    android:text="기저질환 검색"
                    android:textColor="#ffffff"
                    android:textSize="13dp" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="고혈압"
                    android:textSize="15dp"></TextView>


                <TextView
                    android:id="@+id/mhypertension"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="100dp"
                    android:gravity="center"
                    android:fontFamily="@font/nanumsquare_acr"
                    ></TextView>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="흡연"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/msmoke"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="100dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="center"
                    android:textSize="15dp" />


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="당뇨유병기간"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/mdiabetesyear"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="100dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="center"
                    android:textSize="15dp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_gravity="center"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:gravity="center"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="당뇨치료방법"
                    android:textSize="15dp"></TextView>


                <TextView
                    android:id="@+id/mheal"
                    android:layout_width="200dp"
                    android:layout_height="30dp"
                    android:layout_gravity="center"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="center"></TextView>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="활동량"
                    android:textSize="15dp"></TextView>


                <TextView

                    android:id="@+id/mactivity"
                    android:layout_width="100dp"

                    android:layout_height="30dp"
                    android:layout_marginRight="100dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="center"
                    android:textSize="15dp" />




            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="90dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="27dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:text="체중변화"
                    android:textSize="15dp"></TextView>


                <TextView

                    android:id="@+id/mweightchange"
                    android:layout_width="100dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="100dp"
                    android:fontFamily="@font/nanumsquare_acr"
                    android:gravity="center"
                    android:textSize="15dp" />


            </LinearLayout>


            <Button
                android:id="@+id/modifybtn"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:background="@color/colorAccent"
                android:fontFamily="@font/nanumsquare_acr"
                android:text="수정하기"
                android:layout_marginBottom="10dp"
                android:textColor="#ffffff"
                android:textSize="17dp">

            </Button>

        </LinearLayout>


    </androidx.core.widget.NestedScrollView>
</RelativeLayout>