<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".ProfileActivity"
    >
    <View
        android:id="@+id/view_toolbar"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@+id/toolbar"

        android:background="@color/colorAccent" />
    <androidx.appcompat.widget.Toolbar

        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/back"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:drawableTop="@drawable/backspace"
            android:fontFamily="@font/nanumsquare_acr"
            android:text="뒤로가기"
            android:textColor="#7A7A7A"
            android:textSize="15dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:fontFamily="@font/bmdohyeon_ttf"
            android:text="회원정보 관리"
            android:layout_gravity="center"

            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/toolbar_cart"
            style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:drawableTop="@drawable/ic_input_black_24dp"
            android:fontFamily="@font/nanumsquare_acr"
            android:text="로그아웃"
            android:textColor="#7A7A7A"
            android:textSize="15dp" />


    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="60dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:fontFamily="@font/nanumsquare_acr"
            android:text="정확한 정보를 위해 등록해주세요."
            android:textColor="#b8b8b8"
            android:textSize="17dp"
            android:textStyle="bold" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/bmdohyeon_ttf"
                android:text="성별"
                android:textColor="#b8b8b8"
                android:textSize="15dp"></TextView>

            <RadioButton
                android:id="@+id/woman"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:fontFamily="@font/nanumsquare_acr"
                android:text="여성"

                android:textColor="#b8b8b8"
                android:textSize="15dp" />

            <RadioButton
                android:id="@+id/man"

                android:layout_width="90dp"
                android:layout_height="40dp"
                android:layout_gravity="right"

                android:fontFamily="@font/nanumsquare_acr"
                android:text="남성"

                android:textColor="#b8b8b8"
                android:textSize="15dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bmdohyeon_ttf"
                android:text="생년월일"
                android:textColor="#b8b8b8"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/brith"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/nanumsquare_acr"

                android:text="생년월일을 입력해주세요."
                android:textColor="#b8b8b8"
                android:textSize="15dp" />


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bmdohyeon_ttf"
                android:text="당뇨유형"
                android:textColor="#b8b8b8"
                android:textSize="15dp"></TextView>


            <Spinner
                android:id="@+id/diabeteskindspinner"
                android:layout_width="100dp"
                android:layout_height="30dp"

                android:layout_marginRight="100dp"
                android:background="@color/colorAccent"
                android:entries="@array/diabeteskind"
                android:fontFamily="@font/nanumsquare_acr"
                android:textColor="#ffffff"></Spinner>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bmdohyeon_ttf"
                android:text="키"
                android:textColor="#b8b8b8"
                android:textSize="15dp"></TextView>

            <EditText
                android:id="@+id/height"
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_acr"
                android:hint="키를 입력해주세요"

                android:textColorHint="#b8b8b8"
                android:textSize="15dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="CM"
                android:textColor="#b8b8b8" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:id="@+id/weight"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bmdohyeon_ttf"
                android:text="몸무게"

                android:textColor="#b8b8b8"
                android:textSize="15dp"></TextView>

            <EditText
                android:layout_width="170dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_acr"

                android:hint="몸무게를 입력해주세요"
                android:textColorHint="#B8b8b8"
                android:textSize="15dp" />

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:text="KG"
                android:textColor="#B8b8b8" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="31dp"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/bmdohyeon_ttf"
                android:text="BMI"
                android:textColor="#b8b8b8"
                android:textSize="15dp"></TextView>

            <TextView
                android:id="@+id/bmi"
                android:layout_width="200dp"
                android:layout_height="30dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:textColorHint="#B8b8b8"
                android:textSize="15dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:fontFamily="@font/bmdohyeon_ttf"
                android:text="기저질환"
                android:textColor="#b8b8b8"
                android:textSize="15dp"></TextView>

            <EditText
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nanumsquare_acr"
                android:hint="기저질환"

                android:textColorHint="#B8b8b8"
                android:textSize="15dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="30dp"
                android:background="@color/colorAccent"
                android:fontFamily="@font/nanumsquare_acr"

                android:text="기저질환 검색"
                android:textColor="#ffffff"
                android:textSize="13dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center">

            <TextView
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:fontFamily="@font/bmdohyeon_ttf"
                android:text="활동량"
                android:textColor="#b8b8b8"
                android:textSize="15dp"></TextView>

            <RadioButton
                android:layout_width="70dp"
                android:layout_height="40dp"

                android:fontFamily="@font/nanumsquare_acr"
                android:text="적음"

                android:textColor="#B8B8B8"
                android:textSize="15dp" />

            <RadioButton

                android:layout_width="70dp"
                android:layout_height="40dp"

                android:fontFamily="@font/nanumsquare_acr"

                android:text="보통"
                android:textColor="#B8B8B8"
                android:textSize="15dp" />

            <RadioButton

                android:layout_width="70dp"
                android:layout_height="40dp"

                android:fontFamily="@font/nanumsquare_acr"
                android:text="많음"

                android:textColor="#B8B8B8"
                android:textSize="15dp" />


        </LinearLayout>


        <Button
            android:id="@+id/store"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:background="@drawable/round_cornerblue"
            android:fontFamily="@font/nanumsquare_acr"
            android:text="저장하기"
            android:textColor="#ffffff"
            android:textSize="17dp">

        </Button>

    </LinearLayout>


</RelativeLayout>